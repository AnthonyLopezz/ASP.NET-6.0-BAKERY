@using DarsBakeryv3.Data
@using DarsBakeryv3.Data.Enum
@model Employee

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container-fluid about py-5">
    <div class="container">
        <div class="tab-class text-center">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-3 mt-4">
                        <div class="col-md-8 offset-2">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Details Employee</h5>
                                    <div class="col-md-4 offset-4 text-center">
                                        <img width="100%" id="ImageUrlPreview" />
                                    </div>
                                    <!-- Multi Columns Form -->
                                    <form asp-action="Delete" class="row g-3">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" readonly />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group  col-md-6">
                                            <label asp-for="Photo" class="control-label"></label>
                                            <input asp-for="Photo" type="text" class="form-control" readonly />
                                            <span asp-validation-for="Photo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="DNI" class="control-label"></label>
                                            <input asp-for="DNI" type="text" class="form-control" readonly />
                                            <span asp-validation-for="DNI" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="PhoneNumber" class="control-label"></label>
                                            <input asp-for="PhoneNumber" type="text" class="form-control" readonly />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="RoleJob" class="control-label"></label>
                                            <select asp-for="RoleJob" class="form-control" asp-items="Html.GetEnumSelectList<RoleJob>()" readonly></select>
                                            <span asp-validation-for="RoleJob" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Delete" class="btn btn-danger float-right" />
                                            <a class="text-white btn btn-dark float-right" asp-action="Index">Back To List</a>
                                        </div>
                                    </form><!-- End Multi Columns Form -->
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#Photo").val();
        });

        $("#Photo").on("change", function() {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}