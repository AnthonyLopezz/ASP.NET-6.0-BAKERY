@model Flavor

@{
    ViewData["Title"] = @Model.Name;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1 class="text-white">Details for @Model.Name</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="Name" class="control-label text-white"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="text-white btn btn-dark float-right" asp-action="Index">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>