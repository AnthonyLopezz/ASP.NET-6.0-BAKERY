@model IEnumerable<Cake>
@{
    ViewData["Title"] = "List of Cake";
    Layout = "~/Views/Shared/_AdmLayout.cshtml";
}
    <div class="pagetitle">
        <h1>Cake List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row col-lg-12">
            <div class="col">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cakes in stock</h5>

                        <!-- Default Table -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Shape</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td><img src="@item.ImageURL" width="20%" alt="@item.Name"></td>
                                            <td>@item.Price</td>
                                            <td>@item.Shape</td>
                                            <td class="text-center align-center d-flex">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-1 btn-sm"> <i class="bi bi-pencil-square"></i> Edit</a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success me-1 btn-sm"> <i class="bi bi-eye"></i> Details</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger me-1 text-white btn-sm"> <i class="bi bi-trash"></i> Delete</a>
                                            </td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                        <!-- End Default Table Example -->
                    </div>
                </div>
            </div>

        </div>
    </section>
@await Html.PartialAsync("_Add", "Cake") 