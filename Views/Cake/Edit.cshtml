@model NewCakeVM
@using DarsBakeryv3.Data
@using DarsBakeryv3.Data.Enum
@using DarsBakeryv3.Data.ViewModels

@{
    ViewData["Title"] = "Create a new cake";
}

<div class="row mt-5">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Update Cake</h5>
                <div class="col-md-4 offset-4 text-center">
                    <img width="100%" id="ImageUrlPreview" />
                </div>
                <!-- Multi Columns Form -->
                <form asp-action="Edit" class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-md-6">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" type="text" class="form-control" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Shape" class="control-label"></label>
                        <select asp-for="Shape" class="form-control" asp-items="Html.GetEnumSelectList<Shape>()"></select>
                        <span asp-validation-for="Shape" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PortionId" class="control-label"></label>
                            <select asp-for="PortionId" class="form-control" asp-items="ViewBag.Portions"></select>
                            <span asp-validation-for="PortionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FlavorId" class="control-label"></label>
                            <select asp-for="FlavorId" class="form-control" asp-items="ViewBag.Flavors"></select>
                            <span asp-validation-for="FlavorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FrostingId" class="control-label"></label>
                            <select asp-for="FrostingId" class="form-control" asp-items="ViewBag.Frostings"></select>
                            <span asp-validation-for="FrostingId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-right" />
                        <a class="text-white btn btn-dark float-right" asp-action="Index">Back To List</a>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>

    </div>
</div>s


@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });

        $("#ImageURL").on("change", function() {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}