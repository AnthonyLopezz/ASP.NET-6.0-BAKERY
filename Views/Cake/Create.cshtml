@model NewCakeVM
@using DarsBakeryv3.Data.Enum
@using DarsBakeryv3.Data.ViewModels
@using DarsBakeryv3.Data
 
@{
    ViewData["Title"] = "Create a new cake";
}

<div class="row mt-4">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new cake</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" type="text" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Shape" class="control-label"></label>
                                <select asp-for="Shape" class="form-control" asp-items="Html.GetEnumSelectList<Shape>()"></select>
                                <span asp-validation-for="Shape" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PortionId" class="control-label"></label>
                                <select asp-for="PortionId" class="form-control" asp-items="ViewBag.Portions"></select>
                                <span asp-validation-for="PortionId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FlavorId" class="control-label"></label>
                                <select asp-for="FlavorId" class="form-control" asp-items="ViewBag.Flavors"></select>
                                <span asp-validation-for="FlavorId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FrostingId" class="control-label"></label>
                                <select asp-for="FrostingId" class="form-control" asp-items="ViewBag.Frostings"></select>
                                <span asp-validation-for="FrostingId" class="text-danger"></span>
                            </div>
                    </div>

                    <div class="col-md-4 mt-3 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success float-right" />
                        <a class="text-white btn btn-dark float-right" asp-action="Index">Back to List</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}